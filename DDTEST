  WRITE FILE(OUTFILE) FROM(R);
  R='//         DD  DSN=DSN810.DB2P.SDSNEXIT,DISP=SHR             ';          JO
  WRITE FILE(OUTFILE) FROM(R);
  R='//         DD  DSN=DSN810.SDSNLOAD,DISP=SHR                  ';          JO
  WRITE FILE(OUTFILE) FROM(R);
  R='//         DD  DSN=CBG.PROD.LOAD,DISP=SHR                    ';          JO
  WRITE FILE(OUTFILE) FROM(R);
  R='//         DD  DSN=CBG.PROD.LOAD,DISP=SHR                    ';          JO
  WRITE FILE(OUTFILE) FROM(R);
  R='//         DD  DSN=MVSMS12.LINKLIB,DISP=SHR ';                           JO
  WRITE FILE(OUTFILE) FROM(R);

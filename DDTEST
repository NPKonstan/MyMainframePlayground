  R="//CZX3PPRO EXEC PGM=CZX3PPRO,PARM='DATE=&DATE,UPSI=00000000' ";          JO
  WRITE FILE(OUTFILE) FROM(R);
  R='//*----------------------------------------------------------';    ----  JO
  WRITE FILE(OUTFILE) FROM(R);

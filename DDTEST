  R='//SYSUDUMP DD DUMMY                                          ';          JO
  WRITE FILE(OUTFILE) FROM(R);
  END HEADER;

  BODY :PROC;
  MYNUM = I;
  R='//FILEINP  DD DSN=DD.P.XS.DDDFDR.G'!!MYNUM!!'V00,DISP=SHR';              JO
  WRITE FILE(OUTFILE) FROM(R);
  R='//PRT      DD SYSOUT=X,UCS=CBG                               ';          JO

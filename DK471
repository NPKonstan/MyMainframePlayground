          PINAX(I).PROD_TYPE(6).PP(1).CHR_PROD =
             'PREMIUM  апоталиеутийос  ';
          PINAX(I).PROD_TYPE(6).PP(1).COD_PROD_FAMILY = '1000';
          PINAX(I).PROD_TYPE(6).PP(1).CHR_PROD_FAMILY =

         PINAX(I).PROD_TYPE(7).PP(INX).NUM_TOTAL_CNT =
         PINAX(I).PROD_TYPE(7).PP(INX).NUM_TOTAL_CNT + 1;
         PINAX(I).PROD_TYPE(7).PP(INX).NUM_TOTAL_AMT =
         PINAX(I).PROD_TYPE(7).PP(INX).NUM_TOTAL_AMT +
                                          KSRDYPOL + KSREKKRE ;
          END;
          WHEN (5122) DO ;
